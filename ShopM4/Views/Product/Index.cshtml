@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product";
}

<em><h1>Products</h1></em>


<p>
    <a class="btn btn-circle btn-warning" asp-controller="Product" asp-action="CreateEdit">
        <i class="fa-solid fa-plus"></i> Create Product
    </a>
</p>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-dark table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.Price</td>

                    <td width="20%">
                        <a class="btn btn-warning btn-circle" asp-controller="Product"
                           asp-action="CreateEdit"
                           asp-route-Id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                            <!-- Edit -->
                        </a>

                        <a class="btn btn-danger btn-circle" asp-controller="Product" asp-action="Delete"
                           asp-route-Id="@item.Id">
                            <i class="fa-solid fa-trash"></i>
                            <!-- Delete -->
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products.</p>
}
