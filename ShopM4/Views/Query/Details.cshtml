@model ShopM4_Models.ViewModels.QueryViewModel
<form method="post">
    <a asp-action="Index" class="btn form-control btn-success">Back to queries</a>
    <h2>Information</h2>
    <table>
        <tr>
            <td>Name</td>
            <td><input asp-for="QueryHeader.FullName" type="text" class="form-control" /></td>
        </tr>
        <tr>
            <td>Phone</td>
            <td><input type="text" asp-for="QueryHeader.PhoneNumber"  class="form-control" /></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input asp-for="QueryHeader.Email" type="text" class="form-control" /></td>
        </tr>
        <tr>
            <td>Query Date</td>
            <td><input value="@Model.QueryHeader.QueryDate" readonly type="text" class="form-control" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Change" class="btn form-control btn-info"/></td>
            <td><input type="submit" value="Delete" class="btn form-control btn-danger" /></td>
        </tr>
    </table>
    <br />
    <h2>Details</h2>
    <h5>Product Name</h5>
    <p>Price: 100р.</p>
</form>
