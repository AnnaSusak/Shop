@model IEnumerable<MyModel>

@{
    ViewData["Title"] = "MyModel";
}

<em><h1>Hello MyModel!</h1></em>
<p>
    <a class="btn btn-circle btn-warning" asp-controller="MyModel" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Create Model
    </a>
</p>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-dark table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Nymber</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.Number</td>
                    <td>
                        <a class="btn btn-warning btn-circle" asp-controller="MyModel" asp-action="Edit"
                   asp-route-Id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                            <!-- Edit -->
                        </a>

                        <a class="btn btn-danger btn-circle" asp-controller="MyModel" asp-action="Delete"
                   asp-route-Id="@item.Id">
                            <i class="fa-solid fa-trash"></i>
                            <!-- Delete -->
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
